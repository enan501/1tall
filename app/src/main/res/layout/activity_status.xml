<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UI.StatusActivity"
        android:background="@drawable/background">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"></LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"/>
            <Button
                    android:id="@+id/st_menu"
                    android:layout_width="48dp"
                    android:background="#00ffffff"
                    android:layout_height="48dp" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"/>
        </LinearLayout>

    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:scrollbarThumbVertical="@null"
            android:scrollbars="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="30dp">
                <ImageView
                        android:id="@+id/st_img"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/gorani"/>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                        <TextView
                                android:id="@+id/st_nickname"
                                android:text="으아아"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/dunggeunmo" />
                        <TextView
                                android:id="@+id/st_level"
                                android:text="LV7"
                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/dunggeunmo"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                        <TextView
                                android:id="@+id/st_follower"
                                android:text="300"
                                android:textSize="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/dunggeunmo"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center"/>

                        <TextView
                                android:id="@+id/st_following"
                                android:text=" 200"
                                android:textSize="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/dunggeunmo"
                                android:layout_height="wrap_content"
                                android:gravity="center"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/st_title"
                            android:gravity="center"
                            android:text="[탐정]"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/dunggeunmo"
                            android:layout_height="wrap_content"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="10dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrowl"/>
                <TextView
                        android:text="달성"
                        android:textSize="20dp"
                        android:fontFamily="@font/dunggeunmo"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrowr"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/st_rView"
                    android:layout_width="match_parent"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/arrowl"/>
                        <TextView
                                android:text="맞춘 문제"
                                android:textSize="20dp"
                                android:fontFamily="@font/dunggeunmo"
                                android:id="@+id/st_solved"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/st_quest1"
                            android:text="누가 황소상을 훔쳤을까"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dunggeunmo"/>
                    <TextView
                            android:id="@+id/st_quest2"
                            android:text="건덕이 실종사건"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dunggeunmo"/>
                    <TextView
                            android:id="@+id/st_quest3"
                            android:text="전체 보기.."
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dunggeunmo"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                           >
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/arrowl"/>
                        <TextView
                                android:text="만든 문제"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:fontFamily="@font/dunggeunmo"
                                android:id="@+id/st_gave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/st_solved1"
                            android:text="[건대의 벚꽃은 어디로]"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dunggeunmo"/>
                    <TextView
                            android:id="@+id/st_solved2"
                            android:text="[에베베베]"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dunggeunmo"/>
                    <TextView
                            android:id="@+id/st_solved3"
                            android:text="전체 보기.."
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dunggeunmo"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>
</LinearLayout>